<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <include
            android:id="@+id/topBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
            layout="@layout/layout_top_bar" />

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >


            <com.finnauxapp.Util.FontText
                custom:typefaceAsset="fonts/Poppins-Medium.ttf"
                android:id="@+id/tvAppNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AE00001"

                android:layout_marginEnd="10dp"
                android:layout_marginStart="3dp"
                android:textColor="#000"

               />

        <com.finnauxapp.Util.FontText
            custom:typefaceAsset="fonts/Poppins-Medium.ttf"
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pradeep Kumar (Hire)"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"

           />
        <View  android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"

            android:background="#c3c3c3"
            ></View>



        <LinearLayout
            android:id="@+id/llDemoInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <com.finnauxapp.Util.FontText
                custom:typefaceAsset="fonts/Poppins-Medium.ttf"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Address Type"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textColor="#000"

              />

            <Spinner

                android:id="@+id/sp_address_type"
                style="@style/spinner_style"

                android:layout_width="match_parent"

                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:minHeight="35dp"
                android:textColor="#000"
                android:textCursorDrawable="@null"
                android:textColorHint="#000"
                android:layout_height="wrap_content"

                />
            <com.finnauxapp.Util.FontText
                custom:typefaceAsset="fonts/Poppins-Medium.ttf"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select State"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:textColor="#000"

                />
            <Spinner

                android:id="@+id/sp_state"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:minHeight="35dp"
                android:textColor="#000"
                android:textCursorDrawable="@null"
                android:textColorHint="#000"
                android:layout_height="wrap_content"

                />
            <com.finnauxapp.Util.FontText
                custom:typefaceAsset="fonts/Poppins-Medium.ttf"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select District"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:textColor="#000"

                />

            <Spinner

                    android:id="@+id/sp_district"
                style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:minHeight="35dp"
                    android:textColor="#000"
                    android:textCursorDrawable="@null"
                    android:textColorHint="#000"
                    android:layout_height="wrap_content"

                    />
            <com.finnauxapp.Util.FontText
                custom:typefaceAsset="fonts/Poppins-Medium.ttf"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Tehsil"
                android:textSize="12sp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:textColor="#000"

                />


            <Spinner

                android:id="@+id/sp_Tehsil"
                style="@style/spinner_style"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:minHeight="35dp"
                android:textColor="#000"
                android:textCursorDrawable="@null"
                android:textColorHint="#000"
                android:layout_height="wrap_content"

                />
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:gravity="bottom"

                >

                <com.finnauxapp.Util.FontEditText
                    android:id="@+id/edAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:textColor="#000"

                    android:layout_marginTop="10dp"
                    android:paddingStart="20dp"

                    android:background="@drawable/input_block"
                    android:textColorHint="#000"
                    android:singleLine="true"
                    android:drawablePadding="10dp"
                    android:hint="Address"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:gravity="bottom"
                >

                <com.finnauxapp.Util.FontEditText
                    android:id="@+id/edAddressLandmark"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:paddingStart="20dp"

                    android:background="@drawable/input_block"
                    android:textColorHint="#000"
                    android:singleLine="true"
                    android:drawablePadding="10dp"
                    android:hint="Address1 (Landmark)"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:gravity="bottom"
                >

                <com.finnauxapp.Util.FontEditText
                    android:id="@+id/edPincode"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="20dp"
                    android:maxLength="6"
                    android:background="@drawable/input_block"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:drawablePadding="10dp"
                    android:hint="Pincode"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner

                android:id="@+id/spYearsLiving"
                style="@style/spinner_style"

                android:layout_width="match_parent"

                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:minHeight="35dp"
                android:textColor="#000"
                android:textCursorDrawable="@null"
                android:textColorHint="#000"
                android:layout_height="wrap_content"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                >
                <TextView
                    android:id="@+id/tvAddressType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Type"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    ></TextView>
                <RadioGroup

                    android:id="@+id/rbAddressType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/tvAddressType"
                    android:layout_centerVertical="true"

                    >
                    <RadioButton
                        android:id="@+id/rbOwn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Own"
                        android:textSize="14sp"
                        android:checked="true"
                        ></RadioButton>

                    <RadioButton
                        android:id="@+id/rbRent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rent"
                        android:textSize="14sp"
                        ></RadioButton>
                </RadioGroup>



            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:gravity="bottom"
                >

                <com.finnauxapp.Util.FontEditText
                    android:id="@+id/edNearrestBranch"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="20dp"

                    android:background="@drawable/input_block"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:drawablePadding="10dp"
                    android:hint="Nearest Branch Distance"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:id="@+id/cbGeoCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update the current Location (Geocode)"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                />
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/ivBack"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:background="@drawable/reject"
                    />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"
                    android:textColor="#fff"
                    android:background="@drawable/save"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>