<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/dialog_positive_round"
   >

    <com.finnauxapp.Util.FontText
        custom:typefaceAsset="fonts/Poppins-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Customer Reference"
        android:layout_margin="20dp"
        android:textSize="14sp"
        android:textColor="@color/color_blue"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#c3c3c3"
        ></View>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp">

        <Spinner

            android:id="@+id/sp_Relation"
            style="@style/spinner_style"
            android:layout_width="match_parent"



            android:minHeight="35dp"
            android:textColor="#000"
            android:textCursorDrawable="@null"
            android:textColorHint="#000"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <com.finnauxapp.Util.FontEditText
            android:id="@+id/edPersonName"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:paddingStart="20dp"

            android:background="@drawable/input_block"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:hint="Person Name"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <com.finnauxapp.Util.FontEditText
            android:id="@+id/edAddress"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:paddingStart="20dp"

            android:background="@drawable/input_block"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:hint="Address"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <com.finnauxapp.Util.FontEditText
            android:id="@+id/edContactNumber"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:paddingStart="20dp"
           android:maxLength="10"
            android:background="@drawable/input_block"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:hint="Contact Number"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <com.finnauxapp.Util.FontEditText
            android:id="@+id/edReferenceFrom"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:maxLength="4"
            android:background="@drawable/input_block"
            android:singleLine="true"
            android:drawablePadding="10dp"
            android:hint="Reference from (Yr)"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

    <com.finnauxapp.Util.FontEditText
        android:id="@+id/edComment"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:paddingStart="20dp"

        android:background="@drawable/input_block"
        android:singleLine="true"
        android:drawablePadding="10dp"
        android:hint="Comment"
        android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
          android:layout_marginTop="20dp"
        android:background="#c3c3c3"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_gravity="end"
        >
        <Button
            android:id="@+id/btn_Delete"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/reject"
            android:text="Delete"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/save"
            android:text="Save"
            android:layout_marginEnd="20dp"

            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>