<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tvSno"
            android:layout_width="0dp"

            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"></TextView>
        <View
            android:layout_width="0.5dp"
            android:background="#c3c3c3"
            android:layout_height="40dp"></View>
        <EditText
            android:id="@+id/edFromEMI"
            android:layout_width="0dp"
            android:background="@android:drawable/editbox_background_normal"
            android:inputType="number"
            android:editable="false"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:text="1"
            android:maxLength="2"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></EditText>
        <View
            android:layout_width="0.5dp"
            android:background="#c3c3c3"
            android:layout_height="40dp"></View>
        <EditText
            android:id="@+id/edToEMI"
            android:layout_width="0dp"
            android:inputType="number"
            android:maxLength="2"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></EditText>
        <View
            android:layout_width="0.5dp"
            android:background="#c3c3c3"
            android:layout_height="40dp"></View>
        <EditText
            android:id="@+id/edEMIAmount"
            android:layout_width="0dp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_weight="1"></EditText>
        <View
            android:layout_width="0.5dp"
            android:background="#c3c3c3"
            android:layout_height="40dp"></View>
        <TextView
            android:id="@+id/tvNoOFemi"
            android:layout_width="0dp"

            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"></TextView>
        <View
            android:layout_width="0.5dp"
            android:background="#c3c3c3"
            android:layout_height="40dp"></View>
        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="0dp"

            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"></TextView>
        <View
            android:layout_width="0.5dp"
            android:background="#c3c3c3"
            android:layout_height="40dp"></View>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c3c3c3"
        android:layout_marginTop="10dp"
        ></View>
</LinearLayout>