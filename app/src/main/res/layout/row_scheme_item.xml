<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llTop"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/cbScheme"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tvSchemeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="#000"
        android:gravity="center"
        ></TextView>

        <TextView
            android:id="@+id/tvSchemeProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            android:gravity="center"
            ></TextView>
        <TextView
            android:id="@+id/tvSchemeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            android:gravity="center"
            ></TextView>
        <TextView
            android:id="@+id/tvSchemePeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            android:gravity="center"
            ></TextView>

    <TextView
        android:id="@+id/tvSchemeROI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:textColor="#000"
        ></TextView>
        <TextView
            android:id="@+id/tvSchemeAdvance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            ></TextView>
        <TextView
            android:id="@+id/tvSchemeState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            ></TextView>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbScheme"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_centerVertical="true"

        ></CheckBox>
    <View
        android:layout_below="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="#c3c3c3"
        ></View>
</RelativeLayout>