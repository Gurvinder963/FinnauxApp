<?xml version="1.0"
    encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>

                    <stroke android:color="#666" android:width="0.5dp"/>
                    <corners android:radius="20dp"/>
                    <solid android:color="#ffffff"/>
                    <padding
                        android:left="3dp"
                        android:right="15dp"
                        android:top="5dp" />

                </shape>
            </item>
            <item>
                <bitmap android:gravity="right"
                    android:src="@drawable/ic_down_arrow" />

            </item>
        </layer-list>
    </item>
</selector>